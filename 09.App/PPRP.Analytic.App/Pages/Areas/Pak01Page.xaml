<UserControl x:Class="PPRP.Pages.Pak01Page"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="1000"
             d:DesignWidth="1980"
             Background="#2E75B7">
    <UserControl.Resources>
        <sys:Double x:Key="LocationFontSize">36</sys:Double>
        <!--
        <Visibility x:Key="LocationShowSymbol">Collapsed</Visibility>
        -->
        <Visibility x:Key="LocationShowSymbol">Visible</Visibility>
        <SolidColorBrush x:Key="LocationTextColor" Color="DarkRed" />
        <SolidColorBrush x:Key="LocationHoverColor" Color="DarkBlue" />
    </UserControl.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/PPRP.Analytic.App;component/Images/Maps/Pak1.jpg" Stretch="UniformToFill" />
        </Grid.Background>
        <DockPanel LastChildFill="True">
            <DockPanel DockPanel.Dock="Left"
                       LastChildFill="True"
                       Width="250">
                <TextBlock DockPanel.Dock="Bottom" Height="2" />
                <TextBlock DockPanel.Dock="Bottom" Height="10" />
                <Button x:Name="cmdGotoThailandPage"
                        DockPanel.Dock="Bottom"
                        Margin="10,1"
                        Style="{StaticResource InlineButton}"
                        Content="เมนูแผนที่ 10 ภาค"
                        Click="cmdGotoThailandPage_Click" />
                <Grid />
            </DockPanel>
            <TextBlock Width="20"
                       DockPanel.Dock="Right"
                       Background="Transparent" />
            <Grid DockPanel.Dock="Right" Background="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border Grid.Row="1"
                        CornerRadius="6"
                        Background="{StaticResource BlueLightBrush2}"
                        BorderBrush="DimGray"
                        BorderThickness="1"
                        Opacity="0.8"
                        ClipToBounds="True">
                    <StackPanel Margin="20">
                        <StackPanel Orientation="Horizontal"
                                    Margin="5"
                                    VerticalAlignment="Center">
                            <TextBlock Text="{Binding DisplayText}"
                                       VerticalAlignment="Center"
                                       FontFamily="{StaticResource THSarabun}"
                                       Foreground="{StaticResource BlueHeavyBrush2}"
                                       FontWeight="Bold"
                                       FontSize="{StaticResource FontSize48}" />
                            <TextBlock Width="5" />
                            <TextBlock Text="{Binding PakUnitText}"
                                       VerticalAlignment="Center"
                                       FontFamily="{StaticResource THSarabun}"
                                       Foreground="{StaticResource BlackBlush}"
                                       FontSize="{StaticResource FontSize48}" />
                        </StackPanel>
                        <ListBox x:Name="lstProvinces"
                                 Grid.Row="1"
                                 Width="350"
                                 Height="Auto"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 HorizontalContentAlignment="Stretch"
                                 ItemContainerStyle="{StaticResource BASEListBoxItemContainer}"
                                 Style="{StaticResource SingleSelectListBox}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Hyperlink x:Name="cmdProvince"
                                                   Click="cmdProvince_Click"
                                                   Cursor="Hand">
                                            <Hyperlink.Style>
                                                <Style TargetType="{x:Type Hyperlink}">
                                                    <Setter Property="TextDecorations" Value="None" />
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="TextDecorations">
                                                                <Setter.Value>
                                                                    <TextDecorationCollection>
                                                                        <TextDecoration Location="Underline">
                                                                            <TextDecoration.Pen>
                                                                                <Pen Brush="{StaticResource BlueHeavyBrush2}" Thickness="2" />
                                                                            </TextDecoration.Pen>
                                                                        </TextDecoration>
                                                                    </TextDecorationCollection>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Hyperlink.Style>
                                            <TextBlock Text="{Binding DisplayText}"
                                                       FontFamily="{StaticResource THSarabun}"
                                                       FontSize="{StaticResource FontSize30}"
                                                       Foreground="{StaticResource BlackBlush}" />
                                        </Hyperlink>
                                    </TextBlock>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
            </Grid>
            <Grid />
        </DockPanel>
        <!--  CLICKABLE LABEL  -->
        <Viewbox Stretch="UniformToFill"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch">
            <Canvas Width="1920"
                    Height="1080"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <Button x:Name="cmCmd01"
                        Tag="ชัยนาท"
                        Canvas.Left="395"
                        Canvas.Top="131"
                        Style="{StaticResource fa-location}"
                        Click="cmCmd_Click" />
                <Button x:Name="cmCmd02"
                        Tag="ลพบุรี"
                        Canvas.Left="786"
                        Canvas.Top="179"
                        Style="{StaticResource fa-location}"
                        Click="cmCmd_Click" />
                <Button x:Name="cmCmd03"
                        Tag="สิงห์บุรี"
                        Canvas.Left="630"
                        Canvas.Top="224"
                        Style="{StaticResource fa-location}"
                        Click="cmCmd_Click" />
                <Button x:Name="cmCmd04"
                        Tag="อ่างทอง"
                        Canvas.Left="593"
                        Canvas.Top="353"
                        Style="{StaticResource fa-location}"
                        Click="cmCmd_Click" />
                <Button x:Name="cmCmd05"
                        Tag="สระบุรี"
                        Canvas.Left="924"
                        Canvas.Top="441"
                        Style="{StaticResource fa-location}"
                        Click="cmCmd_Click" />
                <Button x:Name="cmCmd06"
                        Tag="พระนครศรีอยุธยา"
                        Canvas.Left="619"
                        Canvas.Top="526"
                        Style="{StaticResource fa-location}"
                        Click="cmCmd_Click" />
                <Button x:Name="cmCmd07"
                        Tag="ปทุมธานี"
                        Canvas.Left="748"
                        Canvas.Top="645"
                        Style="{StaticResource fa-location}"
                        Click="cmCmd_Click" />
                <Button x:Name="cmCmd08"
                        Tag="นนทบุรี"
                        Canvas.Left="649"
                        Canvas.Top="649"
                        Style="{StaticResource fa-location}"
                        Click="cmCmd_Click" />
                <Button x:Name="cmCmd09"
                        Tag="สมุทรปราการ"
                        Canvas.Left="742"
                        Canvas.Top="883"
                        Style="{StaticResource fa-location}"
                        Click="cmCmd_Click" />
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
